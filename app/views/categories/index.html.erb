<div id="layoutSidenav_content">
  <main>
    <div class="container-fluid">

      <p id="notice"><%= notice %></p>

      <h3 class="my-5">Categorias</h3>

      <%= link_to 'Novo', new_category_path, class:"btn btn-sm btn-success mr-3 mb-2" %>
      <%= link_to 'Voltar', registrations_path, class:"btn btn-sm btn-success mb-2" %>
      
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Descrição</th>
              <th class="text-center">Alterar</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <td><%= category.descricao %></td>
              <td class="text-center"><%= link_to '', edit_category_path(category), class:"fas fa-edit fa-lg bg-light" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div> 
      <br>
    </div>
  </main>
  <%= render 'shared/footer' %>
</div>