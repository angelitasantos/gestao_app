<div class="dashboard">

    <div class="row">

        <div class="col-2">
            <%= render 'shared/sidebar' %>
        </div>

        <div class="container-dashboard col-10">
        
           <div class="container-devise mx-5 my-5">

            <p id="notice"><%= notice %></p>

            <table class="table table-hover">

              <h1 class="mb-5">Lista de NCMs</h1>

              <thead class="thead-dark">
                <tr>
                  <th>Código</th>
                  <th>Descrição</th>
                  <th>Tipo ICM</th>
                  <th>ICM</th>
                  <th>IPI</th>
                  <th>ST</th>
                  <th class="text-center">Mostrar</th>
                  <th class="text-center">Editar</th>
                  <th class="text-center">Deletar</th>
                </tr>
              </thead>

              <tbody>
                <% @ncms.each do |ncm| %>
                <tr>
                  <td><%= ncm.codigo %></td>
                  <td><%= ncm.descricao %></td>
                  <td><%= ncm.tipoicm %></td>
                  <td><%= ncm.percicm %></td>
                  <td><%= ncm.percipi %></td>
                  <td><%= ncm.percst %></td>
                  <td class="text-center"><%= link_to '', ncm, class:"fas fa-eye fa-lg bg-light" %></td>
                  <td class="text-center"><%= link_to '', edit_ncm_path(ncm), class:"fas fa-edit fa-lg bg-light" %></td>
                  <td class="text-center"><%= link_to '', ncm, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir esse registro?' }, class:"fas fa-trash fa-lg bg-light" %></td>
                </tr>
                <% end %>
              </tbody>

            </table>

            <br>

            <%= link_to 'Novo', new_ncm_path, class:"btn btn-secondary mr-3" %>
            <%= link_to 'Voltar', registrations_path, class:"btn btn-secondary" %>

          </div>

        </div>

    </div>

</div>