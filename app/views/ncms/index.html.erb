<div id="layoutSidenav_content">
  <main>
    <div class="container-fluid">
      <p id="notice"><%= notice %></p>
      <h3 class="my-5">Lista de NCMs</h3>
      <%= link_to 'Novo', new_ncm_path, class:"btn btn-sm btn-success mr-3 mb-2" %>
      <%= link_to 'Voltar', registrations_path, class:"btn btn-sm btn-success mb-2" %> 
      
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Código</th>
              <th>Descrição</th>
              <th>Tipo ICM</th>
              <th>ICM</th>
              <th>IPI</th>
              <th>ST</th>
              <th class="text-center">Alterar</th>
            </tr>
          </thead>
          <tbody>
            <% @ncms.each do |ncm| %>
            <tr>
              <td><%= ncm.codigo %></td>
              <td><%= ncm.descricao %></td>
              <td><%= ncm.tipoicm %></td>
              <td><%= ncm.percicm %></td>
              <td><%= ncm.percipi %></td>
              <td><%= ncm.percst %></td>
              <td class="text-center"><%= link_to '', edit_ncm_path(ncm), class:"fas fa-edit fa-lg bg-light" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>
    </div>
  </main>
  <%= render 'shared/footer' %>
</div>