<div class="dashboard">

    <div class="row">

        <div class="col-2">
            <%= render 'shared/sidebar' %>
        </div>

        <div class="container-dashboard col-10">

            <div class="container-devise mx-5 my-5">

                <h1 class="mb-5">Cadastro</h1>

                <p> <strong>Código:</strong><%= @ncm.codigo %></p>
                <p> <strong>Descrição:</strong><%= @ncm.descricao %></p>
                <p> <strong>Tipo ICM:</strong><%= @ncm.tipoicm %></p>
                <p> <strong>ICM:</strong><%= @ncm.percicm %></p>
                <p> <strong>IPI:</strong><%= @ncm.percipi %></p>
                <p class="mb-5"> <strong>ST:</strong><%= @ncm.percst %></p>

                <%= link_to 'Editar', edit_ncm_path(@ncm), class:"btn btn-secondary mr-3" %>
                <%= link_to 'Voltar', ncms_path, class:"btn btn-secondary" %>

            </div>

        </div>

    </div>

</div>
