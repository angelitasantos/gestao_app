<div class="container form-content">

  <div class="card o-hidden border-0 shadow-lg my-5 form-user">

    <h3 class="text-center mt-5 mb-5">Mudar sua senha</h3>

    <!-- Formulário -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- Senha -->
      <div class="field mt-1">
        <% if @minimum_password_length %>
          <em>Mínimo: (<%= @minimum_password_length %> caracteres)</em><br />
        <% end %>
        <%= f.password_field :password, placeholder: "Digite uma senha válida", autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div><!-- Senha -->

      <!-- Confirmar senha -->
      <div class="field mt-1">
        <%= f.password_field :password_confirmation, placeholder: "Confirme a senha", autocomplete: "new-password", class: "form-control" %>
      </div><!-- Confirmar senha -->

      <!-- Botão -->
      <div class="actions">
        <%= f.submit "Mudar minha senha", class: "mt-2 mb-2 btn btn-success btn-block" %>
      </div><!-- Botão -->

    <% end %><!-- Formulário -->

    <%= link_to 'Entrar', new_user_session_path, class: "btn btn-light btn-block" %>
    <%= link_to 'Esqueceu sua senha', new_user_password_path, class: "btn btn-light btn-block" %>

  </div><!-- Formulário User -->

</div><!-- Formulário Content -->
