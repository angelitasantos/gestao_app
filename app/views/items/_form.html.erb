<div class="container mb-5">

    <div class="container-devise form-group">

      <%= simple_form_for(@item) do |f| %>
      
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="">  
          <%= f.input :descricao, :label => 'Descrição' %>
          <%= f.input :tipo, as: :radio_buttons, collection: [['0', 'produto'], ['1', 'servico']], label_method: :second, value_method: :first %>
          <%= f.label :typeitem_id, :label => 'Grupo de item' %>
          <div class="form-control">
            <%= f.collection_select :typeitem_id, Typeitem.all, :id, :name %>
          </div>
          <%= f.label :category_id, :label => 'Categoria' %>
          <div class="form-control">
            <%= f.collection_select :category_id, Category.all, :id, :name %>
          </div>
          <%= f.label :unmed_id, :label => 'Unidade de Medida' %>
          <div class="form-control">
            <%= f.collection_select :unmed_id, Unmed.all, :id, :abreviacao %>
          </div>
          <%= f.label :ncm_id, :label => 'NCM' %>
          <div class="form-control">
            <%= f.collection_select :ncm_id, Ncm.all, :id, :codigo %>
          </div>
          <%= f.input :estseg, :label => 'Estoque de Segurança' %>
          <%= f.input :leadtime, :label => 'Tempo de Reposição' %>
          <%= f.input :altura, :label => 'Altura' %>
          <%= f.input :comprimento, :label => 'Comprimento' %>
          <%= f.input :largura, :label => 'Largura' %>
          <%= f.input :pesobruto, :label => 'Peso Bruto' %>
          <%= f.input :pesoliquido, :label => 'Peso Líquido' %>
          <%= f.input :lastro, :label => 'Lastro' %>
          <%= f.input :camada, :label => 'Camada' %>
          <%= f.button :submit, 'Salvar', class:"btn btn-secondary" %>
        </div>
        
      <% end %>

    </div>

</div>