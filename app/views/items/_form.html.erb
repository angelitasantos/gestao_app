<div class="container mb-5">

  <div class="container-devise form-group">

    <%= simple_form_for(@item) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :codigo %>
        <%= f.input :descricao %>
        <%= f.input :inativo %>
        <%= f.input :tipo, as: :radio_buttons, collection: [['0', 'PRODUTO'], ['1', 'SERVICO']], label_method: :second, value_method: :first %>
        <%= f.input :embvenda %>
        <%= f.input :estseg %>
        <%= f.input :leadtime %>
        <%= f.input :altura %>
        <%= f.input :comprimento %>
        <%= f.input :largura %>
        <%= f.input :pesobruto %>
        <%= f.input :pesoliquido %>
        <%= f.input :lastro %>
        <%= f.input :camada %>
        <%= f.input :ean %>
        <%= f.association :user %>
        <%= f.association :category %>
        <%= f.association :ncm %>
        <%= f.association :typeitem %>
        <%= f.association :unmed %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Salvar', class:"btn btn-secondary" %>
      </div>
    <% end %>

  </div>

</div>