<div class="dashboard">

    <div class="row">

        <div class="col-2">
            <%= render 'shared/sidebar' %>
        </div>

        <div class="container-dashboard col-10">
        
           <div class="container-devise mx-5 my-5">

            <p id="notice"><%= notice %></p>

            <table class="table table-hover">

              <h1 class="mb-5">Lista de Produtos e Serviços</h1>

              <thead class="thead-dark">
                <tr>
                  <th>Descricao</th>
                  <th>Un Med</th>
                  <th>NCM</th>
                  <th>Est Seg</th>
                  <th>Leadtime</th>
                  <th>Typeitem</th>
                  <th>Category</th>
                  <th class="text-center">Mostrar</th>
                  <th class="text-center">Editar</th>
                  <th class="text-center">Deletar</th>
                </tr>
              </thead>

              <tbody>
                <% @items.each do |item| %>
                <tr>
                  <td><%= item.descricao %></td>
                  <td><%= item.unmed_id %></td>
                  <td><%= item.ncm_id %></td>
                  <td><%= item.estseg %></td>
                  <td><%= item.leadtime %></td>
                  <td><%= item.typeitem_id %></td>
                  <td><%= item.category_id %></td>
                  <td class="text-center"><%= link_to '', item, class:"fas fa-eye fa-lg bg-light" %></td>
                  <td class="text-center"><%= link_to '', edit_item_path(item), class:"fas fa-edit fa-lg bg-light" %></td>
                  <td class="text-center"><%= link_to '', item, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir esse registro?' }, class:"fas fa-trash fa-lg bg-light" %></td>
                </tr>
                <% end %>
              </tbody>

            </table>

            <br>

            <%= link_to 'Novo', new_item_path, class:"btn btn-secondary mr-3" %>
            <%= link_to 'Voltar', registrations_path, class:"btn btn-secondary" %>

          </div>

        </div>

    </div>

</div>